{
  "private": true,
  "name": "planty",
  "version": "1.0.0",
  "description": "A website about plants.",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build-js": "browserify static/js/app.js > static/dist/app.js",
    "build-css": "node-sass static/css/app.scss static/dist/app.css",
    "build": "npm run lint && npm run build-js",
    "lint": " static/js/*.js",
    "watch-css": "nodemon -L -e scss --ignore node_modules/ --watch 'static/css/*.scss' -x \"npm run build-css\"",
    "watch-js": "nodemon -L -e js  --ignore node_modules/ --ignore static/dist --watch 'static/js/*.js' -x \"npm run build-js\"",
    "watch": "npm run watch-js & npm run watch-css"
  },
  "jshintConfig": {
    "asi": false,
    "boss": true,
    "browser": true,
    "debug": true,
    "devel": true,
    "eqnull": true,
    "evil": true,
    "expr": true,
    "globals": {
      "angular": true
    },
    "jquery": true,
    "lastsemic": true,
    "latedef": "nofunc",
    "laxcomma": true,
    "maxcomplexity": 10,
    "maxerr": 10,
    "maxlen": 115,
    "maxparams": 6,
    "node": true,
    "sub": true,
    "supernew": true,
    "trailing": true,
    "undef": true,
    "unused": "vars",
    "worker": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agnaite/planty.git"
  },
  "author": "Agne Klimaite",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/agnaite/planty/issues"
  },
  "homepage": "https://github.com/agnaite/planty#readme",
  "devDependencies": {
    "angular-cookies": "^1.5.7",
    "angular-route": "^1.5.8",
    "bootstrap": "^3.3.7",
    "browserify": "^13.1.0",
    "jshint": "^2.9.3",
    "node-sass": "~3.8.0",
    "nodemon": "~1.10.2",
    "sweetalert": "~1.1.3",
    "phantomjs": "~2.1.7"
   }
}
